<head>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>






<body>
	<h2>Creation des utilisateur</h2>
	<form action="create" method="POST">


	 <div class="row">
	    <div class="col">
	      <input type="string" class="form-control" placeholder="name" name="name">
	    </div>
	    <div class="col">
	      <input type="string" class="form-control" placeholder="email" name="email">
	    </div>
	  </div>


	 <div class="row">
	    <div class="col">
	      <input type="string" class="form-control" placeholder="password" name="password">
	    </div>
	    <div class="col">
	      <input type="string" class="form-control" placeholder="verification du password" name="passwordverif">
	    </div>
	  </div>


	  <button type="submit" class="btn btn-primary mb-2">Cree le compte</button>
	  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	</form>


	<div>
		<% @user_id = 1 %>
		<% @all_users.each do |user| %>
		<p> <%= user[:id] %> <%= user[:name] %> <%= user[:email] %> <%= user[:password] %></p>
		<% @user_id += 1 %>
		<% end %>

	</div>

</body>